<form>
  <fieldset>
  <legend>{{localize "PROWLERS_AND_PARAGONS.Roll.RollDetails"}}</legend>
    <div>
      <label>{{localize "PROWLERS_AND_PARAGONS.Roll.Difficulty"}}
        <select name="difficulty" onchange="updateDifficultyNumber(this)">
          {{selectOptions rollDifficulties selected=difficulty localize=true}}
        </select>
        <input type="number" name="difficulty-number" value="{{modifier}}" placeholder="0" onClick="this.select();" style="width: 8ch;"/>
      </label>
    </div>
    <br>
    <div>
      <label>{{localize "PROWLERS_AND_PARAGONS.Roll.Modifiers"}}
        <input type="number" name="modifier" value="{{modifier}}" placeholder="0" onClick="this.select();" style="width: 8ch;"/>
      </label>
    </div>
  </fieldset>
  <br>
</form>

<script>
  // Map difficulty options to their corresponding numeric values

  // Function to update the difficulty-number input
  function updateDifficultyNumber(selectElement) {
    const selectedOption = selectElement.value;
    const numberInput = selectElement.closest('label').querySelector('input[name="difficulty-number"]');
    if (numberInput) {
      // Set the input value based on the selected option
      numberInput.value = CONFIG.PROWLERS_AND_PARAGONS.roll_difficulty_values[selectedOption] || 0; // Default to 0 if no match
    }
  }
</script>
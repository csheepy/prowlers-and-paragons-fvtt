<ol class='items-list'>
  <li class='item flexrow items-header'>
    <div class='item-name'>{{localize 'Name'}}</div>
    <div class='item-formula'>{{localize 'Gear Bonus'}}</div>
  </li>
  {{#each weapons as |item id|}}
    <li class='item flexrow' data-item-id='{{item._id}}'>
      <div class='item-name rollable' data-roll-type='weapon'>
        <div class='item-image'>
          <a>
            <img
              src='{{item.img}}'
              title='{{item.name}}'
              width='24'
              height='24'
            />
          </a>
        </div>
        <label class="resource-label">{{item.name}}</label>
      </div>
      <div class='item-formula item-prop'>{{item.system.weapon_bonus}}</div>
    </li>
  {{/each}}
    {{#each armor as |item id|}}
    <li class='item flexrow' data-item-id='{{item._id}}'>
      <div class='item-name rollable' data-roll-type='armor'>
        <div class='item-image'>
          <a>
            <img
              src='{{item.img}}'
              title='{{item.name}}'
              width='24'
              height='24'
            />
          </a>
        </div>
         <label class="resource-label">{{item.name}}</label>
      </div>
      <div class='item-formula item-prop'>{{item.system.armor_bonus}}</div>
    </li>
  {{/each}}
</ol>